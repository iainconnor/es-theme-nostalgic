<theme>
    <formatVersion>3</formatVersion>
    <include>./../nostalgic.xml</include>

	<view name="basic, detailed, video">

		<textlist name="gamelist">
			<selectorColor>2f6dfe</selectorColor>
			<selectedColor>ffffff</selectedColor>
		</textlist>
		
	</view>
	
	<view name="detailed">	
		<image name="md_image">
			<pos>0.720 0.450</pos>
			<maxSize>0.125 0.200</maxSize>
			<origin>0.5 0.5</origin>
		</image>
		
	</view>	
		
	<view name="video">

		<video name="md_video">
			<pos>0.720 0.450</pos>
			<maxSize>0.125 0.200</maxSize>
			<origin>0.5 0.5</origin>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
			<delay>2</delay>
		</video>
		
	</view>
	
</theme>